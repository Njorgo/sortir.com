{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Détail Sortie{% endblock %}

{% block body %}

    <div class="container">
        <div class="row sortie_detail_infos">
            <div class="col-md-6">
                <div>Nom de la sortie :{{ sortie.nom }}</div>
                <div>Date et heure de la sortie :{{ sortie.dateHeureDebut | date('Y-m-d')}}</div>
                <div>Date limite d'inscription :{{ sortie.dateLimiteInscription | date('Y-m-d')}}</div>
                <div>Nombre de place :{{ sortie.nbInscriptionsMax }}</div>
                <div>Durée :{{ sortie.duree }} minutes</div>
                <div>Description et infos :{{ sortie.infosSortie }}</div>
            </div>
            <div class="col-md-6">
                <div>Lieu :{{ sortie.lieuSortie.nom }}</div>
                <div>Campus :{{ sortie.organisateur.campus.nom }}</div>
                <div>Rue :{{ sortie.lieuSortie.rue }}</div>
                <div>Code postal :{{ sortie.lieuSortie.ville.codePostal }}</div>
                <div>Latitude :{{ sortie.lieuSortie.latitude }}</div>
                <div>Longitude :{{ sortie.lieuSortie.longitude }}</div>
            </div>
        </div>
        <section class="participant_inscrits"> Liste des participants : <br>

            {{ sortie.inscrits|length }}
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom</th>
                </tr> {%for inscrit in sortie.inscrits%} <tr>
                    <td>
                        <a href="{{ asset('profil/'~ inscrit.id) }}">{{ inscrit.pseudo }}</a>
                    </td>
                    <td>{{ inscrit.nom }} {{ inscrit.prenom }}</td>
                </tr> {% endfor %}
                </tbody>
            </table>
        </section>
    </div>

{% endblock %}