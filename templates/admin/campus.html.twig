{% extends 'base.html.twig' %}

{% block title %}Liste des campus | {{ parent() }}{% endblock %}

{% block body %}
<h2>Liste des campus</h2>

<section>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="col">
                    Nom du campus
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        {% for lcampus in campus %}
            <tr>
                <td>
                    {{ lcampus.nom }}
                </td> 
                <td>  
                    <a href="{{ path('admin_campus_modifier',{'id':lcampus.id}) }}">Modifier</a>
                    
                    <a href="{{ path('admin_campus_supprimer',{'id':lcampus.id}) }}">Supprimer</a>            
                      
                </td>
            </tr>
        {% endfor %}       
        </tbody>
    </table>
    <table class="table table-striped" >
        <tr>            
          <td align="center"><a href="{{ path('admin_campus_creer') }}">Ajouter</a></td>
        </tr>
    </table>
 
</section>

{% endblock %}
