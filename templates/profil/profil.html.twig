{% extends '/base.html.twig' %}

{% block body %}
        <div>
            <img class="photoProfil" src="{{ asset('img/profilBlank.jpg') }}" alt="photoProfil">
        </div>
    <div class="participant-profil">
        <div class="participant-profil-infos">
            <h2>{{ participant.pseudo }}</h2>
            <div>Prénom : {{ participant.prenom }}</div>
            <div>Nom : {{ participant.nom }}</div>
            <div>Téléphone : {{ participant.telephone }}</div>
            <div>Email : {{ participant.mail }}</div>
            <div>Campus : {{ participant.Campus.nom }}</div>            
        </div>
        <div><button class="btn btn-primary"><a href="{{ path('main_home') }}" >Retour</a></button></div>
    </div>
{% endblock %}

{% block title %}
    {{ participant.pseudo }}
{% endblock %}

